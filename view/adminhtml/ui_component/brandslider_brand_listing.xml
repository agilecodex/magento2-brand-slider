<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">brandslider_brand_listing.brandslider_brand_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New Brand</label>
            </button>
        </buttons>
        <spinner>brandslider_brand_columns</spinner>
        <deps>
            <dep>brandslider_brand_listing.brandslider_brand_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="brandslider_brand_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">brand_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Acx_BrandSlider::brandslider</aclResource>
        <dataProvider class="Acx\BrandSlider\Ui\Component\DataProvider" name="brandslider_brand_listing_data_source">
            <settings>
                <requestFieldName>brand_id</requestFieldName>
                <primaryFieldName>brand_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="brandslider_brand_columns">
        <column name="brand_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="store_id" class="Magento\Store\Ui\Component\Listing\Column\Store">
            <settings>
                <label translate="true">Store View</label>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
                <sortable>false</sortable>
            </settings>
        </column>
        <column name="name">
            <settings>
                <filter>text</filter>
                <label translate="true">Brand Name</label>
            </settings>
        </column>
        <column name="image" class="Acx\BrandSlider\Ui\Component\Listing\Column\Thumbnail" component="Magento_Ui/js/grid/columns/thumbnail">
            <settings>
                <filter>text</filter>
                <label translate="true">Brand Logo</label>
                <sortable>false</sortable>
            </settings>
        </column>
        <column name="image_alt">
            <settings>
                <filter>text</filter>
                <label translate="true">Alt Text</label>
            </settings>
        </column>
        <column name="status" class="Acx\BrandSlider\Ui\Component\Listing\Column\Status">
            <settings>
                <filter>text</filter>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="sort_order">
            <settings>
                <filter>text</filter>
                <label translate="true">Sort Order</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Acx\BrandSlider\Ui\Component\Listing\Column\BrandActions">
            <settings>
                <indexField>brand_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
